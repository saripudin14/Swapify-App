<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="cellContainer" alignment="CENTER_LEFT" prefHeight="75.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 8;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="swapify.ConversationCellController">
   <children>
      <ImageView fx:id="itemImageView" fitHeight="55.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true" />
      <VBox>
         <children>
            <Label fx:id="itemNameLabel" style="-fx-font-weight: bold;" text="Nama Barang yang Ditawar">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="otherUserNameLabel" text="dengan Nama Pengguna" />
         </children>
      </VBox>
      <Region HBox.hgrow="ALWAYS" />
      <Label fx:id="statusLabel" styleClass="tag" text="Status" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>