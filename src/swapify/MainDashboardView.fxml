<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="600.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="swapify.MainDashboardController">
   <children>
      <BorderPane style="-fx-background-color: #f4f6f9;">
         
         <top>
            <BorderPane prefHeight="70.0" style="-fx-background-color: #212529; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 5);">
               
               <left>
                  <Label text="Katalog Swapify" style="-fx-text-fill: #f8f9fa;" BorderPane.alignment="CENTER">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <BorderPane.margin>
                        <Insets left="30.0" />
                     </BorderPane.margin>
                  </Label>
               </left>

               <right>
                  <HBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="logoutButton" onAction="#handleLogoutAction" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" text="Logout">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Button>
                        
                        <StackPane fx:id="profileButtonContainer" onMouseClicked="#handleProfileAction" style="-fx-cursor: hand;">
                           <children>
                              <Circle fx:id="profileCircle" radius="20.0" style="-fx-fill: #495057;" />
                              <Label fx:id="profileInitialLabel" style="-fx-text-fill: #f8f9fa; -fx-font-weight: bold; -fx-font-size: 18px;" text="P" />
                           </children>
                        </StackPane>
                        
                     </children>
                     <BorderPane.margin>
                        <Insets right="30.0" />
                     </BorderPane.margin>
                  </HBox>
               </right>
               
            </BorderPane>
         </top>

         <center>
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" BorderPane.alignment="CENTER">
               <content>
                  <TilePane fx:id="itemCatalogPane" hgap="20.0" prefColumns="4" style="-fx-background-color: transparent;" vgap="20.0">
                     <padding>
                        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
                     </padding>
                  </TilePane>
               </content>
            </ScrollPane>
         </center>
      </BorderPane>
   </children>
</StackPane>