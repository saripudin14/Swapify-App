<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #F0F2F5;" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="swapify.UserProfileController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="10.0" style="-fx-background-color: white; -fx-border-width: 0 0 1 0; -fx-border-color: #ddd;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButtonAction" styleClass="back-button" text="←" />
            <Label styleClass="page-header" text="Profil Pengguna" />
         </children>
         <padding>
            <Insets left="20.0" />
         </padding>
      </HBox>
      
      <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="80.0">
         <children>
            <VBox alignment="CENTER" spacing="10.0" styleClass="page-container">
               <children>
                  <ImageView fx:id="profileImageView" fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                     <clip>
                        <Circle centerX="60.0" centerY="60.0" radius="60.0" />
                     </clip>
                  </ImageView>
                  <Label fx:id="namaLengkapLabel" styleClass="page-header" text="Nama Lengkap Pengguna" />
                  <Label fx:id="emailLabel" styleClass="page-subheader" text="email@pengguna.com" />
               </children>
               <padding>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
               </padding>
            </VBox>
            
            <VBox styleClass="page-container" VBox.vgrow="ALWAYS">
               <children>
                  <Label styleClass="section-title" text="Barang yang Ditawarkan">
                     <padding>
                        <Insets left="20.0" top="5.0" />
                     </padding>
                  </Label>
                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                     <content>
                        <TilePane fx:id="userItemsPane" hgap="20.0" prefColumns="4" vgap="20.0">
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
                           </padding>
                        </TilePane>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>